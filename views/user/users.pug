doctype html
html
	head
		include ../head.pug
	body
		include ../title.pug
		table.dbfetch
			caption.tableHeader Users
				a(href='/user/create')
					button.create.iconButton#user
						i.fa.fa-plus Create
			tr
				th _id
				th Username
				th Password
				th First Name
				th Last Name
				th edit

			each val in {users}
				each user in val
					tr
						td= user.id
						td= user.username
						td= user.password
						td= user.userFirstName
						td= user.userLastName
						td
							a(href='/user/one/' + user.id)
								i.fa.fa-pencil
	footer
		include ../footer.pug
