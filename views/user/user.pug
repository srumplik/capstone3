doctype html
html
	head
		include ../head.pug
	body
		include ../title.pug
		h2.pageSubTitle User: #{user}
		div.form
			form(action = `/user/update/${user_id}` , method = 'POST')
				div#userName
					label(for = 'username') Username:
					br
					input(name = 'username', value = `${user}`)
				div#password
					label(for = 'password') Password:
					br
					input(name = 'password', value = `${user_password}`)
				div#userFirstName
					label(for = 'firstName') First Name:
					br
					input(name = 'firstname', value = `${userFirstName}`)
				div#userLastName
					label(for = 'lastName') Last Name:
					br
					input(name = 'lastName', value = `${userLastName}`)
				button(type = 'submit') Update
			a(href=`/user/delete/${user_id}`)
				button
					i.fa.fa-trash Remove
	footer
		include ../footer.pug
